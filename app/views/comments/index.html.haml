.container
  .row.spacing
    .col-md-2
    .col-md-8.hero-text
      burt &co.
    .col-md-2
  .row
    .col-md-2
    .col-md-8.image
      .row
        .pointer
          %p#point-left
            <
        %img#main-img{"src" => "/images/bbbbbb.JPG"}
        .pointer
          %p#point-right
            >
      .row
        %form.comment-box{"role" => "form", "method" => "post", "action" => "/comments"}
          = form_for @comment, html: {class: "form-group"} do |f|
            =f.text_area :content, class: "form-control", rows: 3, placeholder: "leave a message for burt &co."
            =f.submit "POST MESSAGE", class: "btn"
      .row
        %ul.comments-list
          - @comments.each do |c|
            %li
              .comment-content
                = c.content
              .comment-created
                = "Posted #{time_ago_in_words(c.created_at)} ago"
    .col-md-2